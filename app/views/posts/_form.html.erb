<h1>Post Form:</h1>
  <%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %>
  <%= f.text_area :content %><br>
  <%= f.label "Select category or categories"%><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.label "Or create a new category" %><br>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
    <% end %>
  <%= f.submit %>
  <% end %>
